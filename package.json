{
  "name": "bulma-start",
  "version": "0.0.2",
  "description": "Start package for Bulma",
  "keywords": [
    "sass",
    "bulma",
    "css",
    "start"
  ],
  "author": "Jeremy Thomas <bbxdesign@gmail.com> (http://jgthms.com)",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^7.1.5",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015-ie": "^6.7.0",
    "browser-sync": "^2.18.13",
    "bulma": "^0.6.0",
    "imagemin": "^5.3.1",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "onchange": "^3.2.1",
    "postcss-cli": "^4.1.1",
    "rimraf": "^2.6.2"
  },
  "scripts": {
    "clean": "rimraf ./{css/*,js/*,images/*}",
    "postcss": "postcss --use autoprefixer --output ./css/main.css ./css/main.css",
    "scss": "node-sass src/sass/main.scss ./css/main.css",
    "imagemin": "imagemin src/images/* -o ./images",
    "babel": "babel src/javascript --out-dir ./js",
    "serve": "browser-sync start --server --files \"./css/*.css, ./js/*.js, **/*.html, !./node_modules/**/*.html\"",
    "build:css": "run-s scss postcss",
    "build:js": "run-s babel",
    "build:images": "run-s imagemin",
    "build": "run-s build:*",
    "watch:css": "onchange \"src/sass\" -- run-s build:css",
    "watch:js": "onchange \"src/js\" -- run-s build:js",
    "watch:images": "onchange \"src/images\" -- run-s build:images",
    "watch": "run-p serve watch:*",
    "postinstall": "run-s build watch"
  }
}
